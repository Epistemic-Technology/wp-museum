{
    "$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
    "name": "wp-museum/object-image",
    "title": "Object Image",
    "category": "wp-museum",
    "icon": "museum",
    "description": "A block to display a single museum object image, with title and caption.",
    "supports": {
        "align": true,
        "html": false
    },
    "textdomain": "wp-museum",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "attributes": {
        "align": {
			"type"    : "string",
			"default" : "left"
		},
		"objectID": {
			"type"    : "number",
			"default" : 0
		},
		"catID": {
			"type"    : "string",
			"default" : "No Object Selected"
		},
		"title": {
			"type"    : "string",
			"default" : "No Object Selected"
		},
		"captionText": {
			"type"    : "string",
			"default" : ""
		},
		"imgHeight": {
			"type"    : "number",
			"default" : 0
		},
		"imgWidth": {
			"type"    : "number",
			"default" : 0
		},
		"imgURL": {
			"type"    : "string",
			"default" : ""
		},
		"imgIndex": {
			"type"    : "number",
			"default" : 0
		},
		"totalImages": {
			"type"    : "number",
			"default" : 0
		},
		"objectURL": {
			"type"    : "string",
			"default" : ""
		},
		"displayTitle": {
			"type"    : "boolean",
			"default" : true
		},
		"displayCatID": {
			"type"    : "boolean",
			"default" : true
		},
		"displayCaption": {
			"type"    : "boolean",
			"default" : true
		},
		"linkToObject": {
			"type"    : "boolean",
			"default" : true
		},
		"imgDimensions": {
			"type"    : "object",
			"default" : {
				"width"  : 300,
				"height" : 300,
				"size"   : "medium"
			}
		},
		"fontSize": {
			"type"    : "number",
			"default" : 0.7
		},
		"titleTag": {
			"type"    : "string",
			"default" : "h6"
		}
    }
}
